// Define all term names to save
	$terms[] = 'Sport';
	$terms[] = 'Debatt';
	$terms[] = 'Ekonomi';
	$terms[] = 'Kultur & NÃ¶je';
	$terms[] = 'Ledare';

	// save the terms
	foreach ($terms as $singel_term ) {
		$term = new stdClass();
